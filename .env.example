# ============================================
# FraudLens AI v2 - Environment Configuration
# ============================================

# NVIDIA API Key (Required)
# Get your key from: https://build.nvidia.com
NVIDIA_API_KEY=your_nvidia_api_key_here

# Model Selection
# Options: meta/llama-3.3-70b-instruct, nvidia/nemotron-4-340b-instruct
NIM_MODEL=meta/llama-3.3-70b-instruct

# Embedding Model
EMBEDDING_MODEL=nvidia/nv-embedqa-e5-v5

# Reranking Model  
RERANK_MODEL=nvidia/nv-rerankqa-mistral-4b-v3

# Document Parsing Model
PARSE_MODEL=nvidia/nemotron-parse

# Vector Store Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=fraud_patterns

# Optional: Ollama for local deployment
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.3:70b

# Application Settings
LOG_LEVEL=INFO
MAX_CONCURRENT_AGENTS=4
ANALYSIS_TIMEOUT=300

# UI Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
